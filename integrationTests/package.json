{
  "name": "commerce-sdk-integration-test",
  "version": "1.4.1-beta.0",
  "description": "Salesforce Commerce Cloud SDK Integration Test",
  "homepage": "https://developer.commercecloud.com/s/",
  "scripts": {
    "depcheck": "depcheck",
    "lint": "eslint \"**/*.ts\" --quiet --fix",
    "pretest": "npm run lint && npm run depcheck",
    "test": "nyc mocha \"tests/*.test.*\"",
    "fetch:internal": "npm pack ../packages/core && npm pack ../packages/generator && npm install ",
    "test:integration": "npm run fetch:internal &&  npm run test",
    "test:integration:redis": "fetch:internal && npm run redis --prefix ../packages/core && npm run test; npm run redis:shutdown --prefix ../packages/core",
    "test:integration:redis:debug": "fetch:internal && npm run redis --prefix ../packages/core && npm run test; npm run redis:shutdown:debug --prefix ../packages/core"
  },
  "dependencies": {
    "@commerce-apps/core": "file:./commerce-apps-core-1.4.1-beta.0.tgz",
    "commerce-sdk": "file:./commerce-sdk-1.4.1-beta.0.tgz"
  },
  "nyc": {
    "all": true,
    "cache": false,
    "include": [
      "node_modules/@commerce-apps/core/dist/**"
    ],
    "excludeNodeModules": false,
    "source-map": false,
    "per-file": true,
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "mocha": {
    "require": [
      "esm"
    ],
    "colors": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "header"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2020, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ]
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "conditional-type-checks": "^1.0.5",
    "depcheck": "^0.9.2",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "esm": "^3.2.25",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1"
  }
}
