{
  "name": "exchange-connector",
  "version": "1.0.0",
  "description": "Downloads raml specs from exchange",
  "author": "Jeff Albert <jalbert@salesforce.com>",
  "homepage": "",
  "license": "MIT",
  "main": "lib/index.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/groups/npm-all/"
  },
  "nyc": {
    "exclude": [
      "release",
      "coverage",
      "test"
    ],
    "reporter": [
      "html",
      "text",
      "json"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10
  },
  "repository": {
    "type": "git",
    "url": "git@git.soma.salesforce.com:cc-steelarc/commerce-sdk.git"
  },
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "nyc cross-env TS_NODE_FILES=true mocha --exit --require ts-node/register --colors test/**/*.ts"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ]
    }
  },
  "dependencies": {
    "@types/graphql": "^14.5.0",
    "apollo-boost": "^0.4.4",
    "dotenv": "^8.2.0",
    "graphql-tag": "^2.10.1"
  }
}
