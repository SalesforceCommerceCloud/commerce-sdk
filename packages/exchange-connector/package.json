{
  "name": "@commerce-apps/exchange-connector",
  "version": "1.3.1-alpha.0",
  "description": "Downloads raml specs from exchange",
  "author": "Jeff Albert <jalbert@salesforce.com>",
  "homepage": "",
  "license": "BSD 3-Clause",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/exchangeDirectoryParser.ts",
      "src/exchangeTools.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10,
    "per-file": true
  },
  "mocha": {
    "forbidOnly": true,
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "colors": true
  },
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint \"**/*.ts\" --quiet --fix",
    "build": "tsc",
    "updateApis": "gulp updateApis",
    "test": "nyc mocha \"test/**/*.test.ts\" --reporter=xunit --reporter-options output=../../reports_integration/exchange-connector.xml",
    "test:debug": "nyc mocha \"test/**/*.test.ts\""
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "header"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2020, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ]
    }
  },
  "dependencies": {
    "@types/graphql": "^14.5.0",
    "apollo-boost": "^0.4.4",
    "chalk": "^3.0.0",
    "cross-fetch": "^3.0.4",
    "dotenv": "^8.2.0",
    "fs-extra": "^8.1.0",
    "graphql-tag": "^2.10.1",
    "node-fetch": "^2.6.0",
    "unzipper": "^0.10.8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jszip": "^3.1.7",
    "@types/unzipper": "^0.10.1",
    "dotenv": "^8.2.0",
    "jszip": "^3.2.2",
    "mocha": "^7.0.1",
    "nock": "^11.7.0",
    "nyc": "^15.0.0"
  },
  "gitHead": "2a6031f5f57c4ba5df8bfb5c4ca42b2631befe58"
}
