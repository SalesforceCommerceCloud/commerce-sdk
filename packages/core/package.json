{
  "name": "@commerce-apps/core",
  "version": "0.2.0-alpha.1",
  "description": "Commerce SDK Generator, contains the templates to generate the SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run lint",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\" --require ts-node/register --require source-map-support/register --reporter=xunit --reporter-options output=../../reports_integration/core.xml --colors",
    "test:debug": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\" --require ts-node/register --require source-map-support/register --colors",
    "build": "tsc",
    "lint": "eslint \"**/*.ts\" --quiet --fix"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "coverage",
      "dist",
      "test"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "header"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2019, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ]
    }
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jsonwebtoken": "^8.3.7",
    "mocha": "^7.0.1",
    "nock": "^11.7.0",
    "nyc": "^15.0.0"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "gitHead": "f99255fced226ec4a43e60f4dc469eee028d8a81",
  "dependencies": {
    "dotenv": "~8.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "~4.17.15",
    "make-fetch-happen": "~7.1.0",
    "node-fetch": "~2.6.0",
    "qs": "~6.9.1",
    "simple-oauth2": "~3.1.0",
    "tmp": "~0.1.0"
  }
}
