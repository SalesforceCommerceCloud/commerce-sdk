{
  "name": "commerce-sdk",
  "version": "1.4.5-beta.0",
  "description": "Salesforce Commerce Cloud SDK",
  "homepage": "https://developer.commercecloud.com/s/",
  "repository": {
    "type": "git",
    "url": "https://github.com/SalesforceCommerceCloud/commerce-sdk"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "images",
    "README.md",
    "APICLIENTS.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "depcheck": "depcheck",
    "lint": "npm run lint:dev -- --quiet",
    "lint:dev": "eslint . --ext .ts --fix",
    "pretest": "npm run lint && npm run depcheck",
    "build": "npm run renderTemplates && tsc && eslint dist --ext .ts,.js --quiet --fix",
    "test": "nyc mocha \"test/**/*.test.ts\" --reporter=xunit --reporter-options output=../../reports/generator.xml",
    "test:debug": "nyc mocha \"test/**/*.test.ts\"",
    "doc": "typedoc --mode modules --out ../../docs renderedTemplates/** --tsconfig tsconfig.json --external-modulemap  \".*/renderedTemplates/([\\w\\-_]+)/\"",
    "clean:node": "rm -rf node_modules",
    "clean:all": "npm run clean:node",
    "renderOperationList": "gulp --gulpfile ./gulpfiles/renderTemplatesTask.ts renderOperationList",
    "renderTemplates": "gulp --gulpfile ./gulpfiles/renderTemplatesTask.ts renderTemplates",
    "updateApis": "npm run updateApisOnly && npm run updateApiDocs",
    "updateApiDocs": "gulp --gulpfile ./gulpfiles/renderTemplatesTask.ts renderDocumentation",
    "updateApisOnly": "gulp --gulpfile ./gulpfiles/downloadRamlsTask.ts updateApis",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10,
    "per-file": true
  },
  "mocha": {
    "forbidOnly": true,
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "colors": true
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:jsdoc/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "@typescript-eslint/eslint-plugin",
      "tsdoc",
      "header",
      "jsdoc"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "reportUnusedDisableDirectives": true,
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2020, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ],
      "jsdoc/require-description": [
        "error",
        {
          "checkConstructors": false
        }
      ],
      "jsdoc/require-jsdoc": [
        "error",
        {
          "publicOnly": true,
          "require": {
            "ArrowFunctionExpression": true,
            "ClassDeclaration": true,
            "ClassExpression": true,
            "FunctionDeclaration": true,
            "FunctionExpression": true,
            "MethodDefinition": true
          }
        }
      ],
      "jsdoc/require-param-name": "error",
      "jsdoc/require-param-type": "off",
      "jsdoc/require-returns-check": "error",
      "jsdoc/require-returns-description": "error",
      "jsdoc/require-returns-type": "off",
      "tsdoc/syntax": "error"
    },
    "overrides": [
      {
        "files": [
          "dist/**"
        ],
        "rules": {
          "@typescript-eslint/camelcase": "warn",
          "@typescript-eslint/ban-ts-ignore": "warn",
          "@typescript-eslint/no-var-requires": "warn",
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },
  "author": "",
  "license": "BSD-3-Clause",
  "gitHead": "2a6031f5f57c4ba5df8bfb5c4ca42b2631befe58",
  "devDependencies": {
    "@commerce-apps/raml-toolkit": "^0.4.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/gulp": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.28.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "conditional-type-checks": "^1.0.5",
    "depcheck": "^0.9.2",
    "dotenv": "^8.2.0",
    "eslint-plugin-jsdoc": "^25.4.0",
    "eslint-plugin-tsdoc": "^0.2.4",
    "fs-extra": "^9.0.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "handlebars": "^4.7.6",
    "handlebars-helpers": "^0.10.0",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.1.3",
    "loglevel": "^1.6.8",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "sinon": "^7.5.0",
    "snyk": "^1.320.5",
    "tmp": "^0.2.0",
    "tslib": "^1.10.0",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "utility-types": "^3.10.0"
  },
  "dependencies": {
    "@commerce-apps/core": "^1.4.5-beta.0",
    "lodash": "^4.17.15",
    "retry": "^0.12.0",
    "typedoc-plugin-external-module-map": "^1.2.1"
  },
  "snyk": true
}
