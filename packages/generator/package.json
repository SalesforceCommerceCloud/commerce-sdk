{
  "name": "commerce-sdk",
  "version": "0.0.2-alpha.0",
  "description": "Commerce SDK Generator, contains the templates to generate the SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run lint",
    "test": "nyc cross-env TS_NODE_FILES=true mocha --reporter=xunit --reporter-options output=../../reports/generator.xml  --exit --require ts-node/register --colors test/**/*.ts",
    "start": "node dist/index.js",
    "clean": "gulp clean",
    "renderTemplates": "gulp renderTemplates",
    "build": "npm run renderTemplates && tsc",
    "lint": "eslint \"**/*.ts\" --quiet --fix"
  },
  "nyc": {
    "exclude": [
      "coverage",
      "test",
      "gulpfile.ts",
      "renderedTemplates"
    ],
    "reporter": [
      "html",
      "text",
      "json"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10
  },
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "gitHead": "a1ce46a1a70e7ec09357bf8b6889a8d208a34063",
  "devDependencies": {
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "@commerce-sdk/core": "^0.0.2-alpha.0"
  }
}
