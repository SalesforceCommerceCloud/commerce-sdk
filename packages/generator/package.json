{
  "name": "commerce-sdk",
  "version": "1.3.1-alpha.0",
  "description": "Salesforce Commerce Cloud SDK",
  "homepage": "https://developer.commercecloud.com/s/",
  "repository": {
    "type": "git",
    "url": "https://github.com/SalesforceCommerceCloud/commerce-sdk"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "images",
    "README.md",
    "APICLIENTS.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "test:debug": "nyc mocha \"test/**/*.test.ts\"",
    "test": "nyc mocha \"test/**/*.test.ts\" --reporter=xunit --reporter-options output=../../reports/generator.xml",
    "test:integration": "nyc --check-coverage=false mocha \"test_integration/**/*.ts\" --retries 2 --timeout 5000 --reporter=xunit --reporter-options output=../../reports/generator-integration.xml",
    "start": "node dist/index.js",
    "clean": "gulp clean",
    "buildOperationList": "gulp buildOperationList",
    "renderTemplates": "gulp renderTemplates",
    "build": "npm run renderTemplates && tsc && eslint dist/** --quiet --fix",
    "lint": "eslint \"**/*.ts\" --quiet --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10,
    "per-file": true
  },
  "mocha": {
    "forbidOnly": true,
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "colors": true
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "header"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2020, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ]
    },
    "overrides": [
      {
        "files": [
          "dist/**"
        ],
        "rules": {
          "@typescript-eslint/camelcase": "warn",
          "@typescript-eslint/ban-ts-ignore": "warn",
          "@typescript-eslint/no-var-requires": "warn"
        }
      }
    ]
  },
  "author": "",
  "license": "BSD-3-Clause",
  "gitHead": "2a6031f5f57c4ba5df8bfb5c4ca42b2631befe58",
  "devDependencies": {
    "@commerce-apps/exchange-connector": "^1.3.1-alpha.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/gulp": "^4.0.6",
    "@types/gulp-debug": "^2.0.31",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "gulp": "^4.0.2",
    "gulp-debug": "^4.0.0",
    "gulp-typescript": "^5.0.1",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "unzipper": "^0.10.5"
  },
  "dependencies": {
    "@commerce-apps/core": "^1.3.1-alpha.0",
    "tslib": "^1.10.0",
    "utility-types": "^3.10.0"
  }
}
