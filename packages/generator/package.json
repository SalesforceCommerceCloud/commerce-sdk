{
  "name": "@commerce-apps/commerce-sdk",
  "version": "0.0.13-alpha.1",
  "description": "Commerce Cloud SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "test:debug": "nyc cross-env TS_NODE_FILES=true mocha --exit --require ts-node/register --colors test/**/*.ts",
    "test": "nyc cross-env TS_NODE_FILES=true mocha --reporter=xunit --reporter-options output=../../reports/generator.xml  --exit --require ts-node/register --colors test/**/*.ts",
    "test:integration": "nyc --silent --check-coverage=false cross-env TS_NODE_FILES=true mocha --reporter=xunit --reporter-options output=../../reports_integration/generator.xml  --exit --require ts-node/register --colors test_integration/**/*.ts",
    "start": "node dist/index.js",
    "clean": "gulp clean",
    "renderTemplates": "gulp renderTemplates",
    "build": "npm run renderTemplates && tsc",
    "lint": "eslint \"**/*.ts\" --quiet --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "exclude": [
      "coverage",
      "test",
      "test_integration",
      "gulpfile.ts",
      "renderedTemplates",
      "index.js"
    ],
    "reporter": [
      "html",
      "text",
      "json"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "header"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2019, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "gitHead": "f99255fced226ec4a43e60f4dc469eee028d8a81",
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "nyc": "^14.1.1",
    "unzipper": "^0.10.5"
  },
  "dependencies": {
    "@commerce-apps/core": "^0.0.12-alpha.1",
    "@commerce-apps/exchange-connector": "^1.0.9-alpha.1"
  }
}
