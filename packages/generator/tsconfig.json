{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "sourceMap": true,
        "target": "ES6",
        "esModuleInterop": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames":true,
        "importHelpers": true,
        "incremental": false,
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true
        // "strict": true,
        // "suppressImplicitAnyIndexErrors": true
    },

    // NOTE: Everything except what you want compiled into JS should be in the exclusions.
    "exclude": [
        "node_modules",
        "src",
        "test",
        "gulpfile.ts"
    ]
}
